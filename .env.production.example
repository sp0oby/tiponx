# MongoDB connection string with TLS settings
MONGODB_URI=mongodb+srv://username:password@cluster.example.mongodb.net/?retryWrites=true&w=majority&tls=true&ssl=true
MONGODB_DB=tiponx

# API keys for Etherscan and Solana Explorer
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
SOLANA_EXPLORER_API_KEY=YOUR_SOLANA_EXPLORER_API_KEY

# Twitter OAuth 2.0 Production Settings
TWITTER_CLIENT_ID=YOUR_TWITTER_CLIENT_ID
TWITTER_CLIENT_SECRET=YOUR_TWITTER_CLIENT_SECRET
TWITTER_BEARER_TOKEN=YOUR_TWITTER_BEARER_TOKEN

# Production URLs
NEXTAUTH_URL=https://tiponx.com
NEXT_PUBLIC_BASE_URL=https://tiponx.com
NEXTAUTH_SECRET=YOUR_GENERATED_SECRET

# Production Settings
NODE_ENV=production 